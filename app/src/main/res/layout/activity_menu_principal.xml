<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F5F5F5">

    <!-- Logo y TÃ­tulo -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/app_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:textColor="#8B4789"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_subtitle"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="48dp"/>

    <!-- Botones del menÃº -->
    <Button
        android:id="@+id/btnMisentrenamientos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/btn_mis_entrenamientos"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8B4789"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@android:drawable/ic_menu_agenda"
        android:drawablePadding="8dp"/>

    <Button
        android:id="@+id/btnfotosProgreso"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/btn_fotos_progreso"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C2528B"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:drawablePadding="8dp"/>

    <Button
        android:id="@+id/btnestadisticas"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/btn_estadisticas"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E91E63"
        android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
        android:drawablePadding="8dp"/>

    <Button
        android:id="@+id/btnGoals"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ðŸŽ¯ MY GOALS"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#9C27B0"
        android:drawableLeft="@android:drawable/star_on"
        android:drawablePadding="8dp"/>

</LinearLayout>
